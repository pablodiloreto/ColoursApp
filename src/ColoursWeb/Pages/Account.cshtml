@page
@model ColoursWeb.Pages.AccountModel
@{
}

<h3>Perfil</h3>

<table>
    <tr>
        <th>
            IsAuthenticated
        </th>
        <td>
            @User.Identity.IsAuthenticated
        </td>
    </tr>

</table>
<h5>Claims </h5>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            Claim Type
        </th>
        <th>
            Claim Value
        </th>
        @*<th>
            Value Type
            </th>
            <th>
            Subject Name
            </th>
            <th>
            Issuer Name
            </th>*@
    </tr>
    @foreach (System.Security.Claims.Claim claim in User.Claims)
    {
        <tr>
            <td>
                @claim.Type
            </td>
            <td>
                @claim.Value
            </td>
            @*<td>
                @claim.ValueType
                </td>
                <td>
                @claim.Subject.Name
                </td>
                <td>
                @claim.Issuer
                </td>*@
        </tr>
    }
</table>


<h5>Access Token</h5>
<p>@Model.AccessToken</p>
